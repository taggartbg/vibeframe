{
  "name": "vibeframe",
  "displayName": "Vibeframe",
  "description": "MCP Integration for VS Code",
  "version": "0.1.0",
  "publisher": "vibeframe",
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:vibeframe.openMcpCanvas",
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vibeframe.openMcpCanvas",
        "title": "Open MCP Canvas",
        "category": "Vibeframe"
      }
    ],
    "configuration": {
      "title": "Vibeframe",
      "properties": {
        "vibeframe.autoDiscoverServers": {
          "type": "boolean",
          "default": true,
          "description": "Automatically discover MCP servers from config files"
        },
        "vibeframe.manualServerUrls": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string",
                "description": "A friendly name for the MCP server"
              },
              "url": {
                "type": "string",
                "description": "The URL of the MCP server"
              }
            }
          },
          "default": [],
          "description": "Manually configured MCP server URLs"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.4",
    "@types/mocha": "^9.0.0",
    "@types/node": "^16.11.7",
    "@types/vscode": "^1.60.0",
    "@types/ws": "^8.5.3",
    "@typescript-eslint/eslint-plugin": "^5.1.0",
    "@typescript-eslint/parser": "^5.1.0",
    "eslint": "^8.1.0",
    "glob": "^7.1.7",
    "mocha": "^9.1.3",
    "typescript": "^4.4.4",
    "vscode-test": "^1.6.1"
  },
  "dependencies": {
    "ws": "^8.8.1"
  }
} 